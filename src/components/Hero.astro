---
import { basics } from "../cv.json";
import Section from "./sections/Section.astro";
import Github from "../icons/github.astro";
import Linkedin from "../icons/linkedin.astro";
import Correo from "../icons/correo.astro";
import Ubication from "../icons/ubication.astro";

const { name, label, image, location, profiles, phone, email } = basics;
const { city, region, countryCode } = location;

const SOCIAL_ICONS = {
  Github,
  Linkedin,
};
---

<Section>
  <div class="container">
    <div class="info">
      <h1>{name}</h1>
      <h2>{label}</h2>
      <span>
        <Ubication />
        {city}, {region}, {countryCode}
      </span>

      <footer>
        {
          email && (
            <a
              href={`mailto:${email}`}
              title={`Enviar correo a ${name} al correo ${email}`}
              target="_blank"
              rel="noopener noreferrer"
            >
              <Correo />
            </a>
          )
        }
        <!-- {
                        phone && (
                            <a 
                            href={`tel:${phone}`}
                            title={`Llamar a ${name} al nÃºmero ${phone}`}
                            target="_blank"
                            rel="noopener noreferrer"
                            >
                            robar icono 
                            {phone}
                            </a>
                            )
                } -->
        {
          profiles &&
            profiles.map(({ network, url, username }) => {
              const icon = network.toLowerCase();
              const href = SOCIAL_ICONS[icon] + username;
              return (
                <a
                  href={url}
                  title={`Visitar el perfil de ${name} en ${network}`}
                  target="_blank"
                  rel="noopener noreferrer"
                >
                  {icon === "github" && <Github />}
                  {icon === "linkedin" && <Linkedin />}
                </a>
              );
            })
        }
      </footer>
    </div>
    <img src={image} alt={name} />
    <!-- "image": "https://avatars.githubusercontent.com/u/71297169?v=4", -->
  </div>
</Section>

<style>
  .container {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    gap: 1rem;
  }
  .info {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    padding-right: 32px;
  }
  h1 {
    font-size: 2rem;
  }
  h2 {
    color: #444;
    font-weight: 500;
    font-size: 1.1rem;
    text-wrap: balance;
  }
  img {
    aspect-ratio: 1/1;
    object-fit: cover;
    width: 128px;
    border-radius: 16px;
  }

  span {
    color: #666;
    display: flex;
    align-items: center;
    gap: 0.25rem;
    font-size: 0.85rem;
    letter-spacing: -0.05rem;
  }
  footer {
    display: flex;
    gap: 4px;
    margin-top: 8px;
  }

  footer a {
    color: #777;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    border: 1px solid #eee;
    padding: 4px;
    height: 32px;
    width: 32px;
    border-radius: 6px;
    transition: all 0.3s ease;
  }

  footer a:hover {
    background: #eee;
  }
  a {
    color: inherit;
    text-decoration: none;
  }
</style>
